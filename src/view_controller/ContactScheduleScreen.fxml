<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.ContactScheduleController">
   <children>
      <TableView fx:id="contactScheduleTableView" layoutX="48.0" layoutY="132.0" prefHeight="525.0" prefWidth="735.0">
        <columns>
          <TableColumn prefWidth="50.0" text="ApptID" />
          <TableColumn prefWidth="75.0" text="Title" />
            <TableColumn prefWidth="75.0" text="Description" />
            <TableColumn prefWidth="75.0" text="Location" />
            <TableColumn prefWidth="50.0" text="Type" />
            <TableColumn prefWidth="65.0" text="Date" />
            <TableColumn prefWidth="50.0" text="Start" />
            <TableColumn prefWidth="50.0" text="End" />
            <TableColumn prefWidth="83.3" text="CustomerID" />
            <TableColumn prefWidth="83.3" text="UserID" />
            <TableColumn prefWidth="83.3" text="ContactID" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="900.0" spacing="10.0">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label text="Choose a screen:" />
                  <RadioButton fx:id="apptScreenRadioButton" mnemonicParsing="false" selected="true" text="Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg1" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="custScreenRadioButton" mnemonicParsing="false" onAction="#onActionCustomerScreen" text="Customers" toggleGroup="$tg1" />
                  <RadioButton fx:id="contactScreenRadioButton" mnemonicParsing="false" onAction="#onActionContactScreen" selected="true" text="Contact Schedule" toggleGroup="$tg1" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER_LEFT" layoutX="375.0" layoutY="10.0" prefHeight="200.0" prefWidth="300.0" spacing="10.0">
               <children>
                  <Label layoutX="10.0" layoutY="39.0" text="Choose a Contact:" />
                  <ComboBox fx:id="contactComboBox" prefWidth="100.0" promptText="Contact" />
                  <Button fx:id="viewScheduleButton" mnemonicParsing="false" onAction="#onActionViewSchedule" prefWidth="100.0" text="View Schedule" />
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="45.0" right="45.0" />
         </padding>
      </HBox>
   </children>
</AnchorPane>
