<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view_controller.AppointmentController">
   <children>
      <TableView layoutX="48.0" layoutY="132.0" prefHeight="525.0" prefWidth="735.0">
        <columns>
          <TableColumn prefWidth="50.0" text="ApptID" />
          <TableColumn prefWidth="75.0" text="Title" />
            <TableColumn prefWidth="75.0" text="Description" />
            <TableColumn prefWidth="75.0" text="Location" />
            <TableColumn prefWidth="50.0" text="Type" />
            <TableColumn prefWidth="65.0" text="Date" />
            <TableColumn prefWidth="50.0" text="Start" />
            <TableColumn prefWidth="50.0" text="End" />
            <TableColumn prefWidth="83.3" text="CustomerID" />
            <TableColumn prefWidth="83.3" text="UserID" />
            <TableColumn prefWidth="83.3" text="ContactID" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="900.0" spacing="10.0">
         <children>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label text="Choose a screen:" />
                  <RadioButton fx:id="apptScreenRadioButton" mnemonicParsing="false" selected="true" text="Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg1" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="custScreenRadioButton" mnemonicParsing="false" onAction="#onActionCustomerScreen" text="Customers" toggleGroup="$tg1" />
                  <RadioButton fx:id="contactScreenRadioButton" mnemonicParsing="false" onAction="#onActionContactScreen" text="Contact Schedule" toggleGroup="$tg1" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets top="15.0" />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label text="Choose a filter:" />
                  <RadioButton fx:id="filterAllRadioButton" mnemonicParsing="false" onAction="#onActionFilterAll" selected="true" text="All">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg2" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton fx:id="filterMonthRadioButton" mnemonicParsing="false" onAction="#onActionFilterMonth" text="Current Month" toggleGroup="$tg2" />
                  <RadioButton fx:id="filterWeekRadioButton" mnemonicParsing="false" onAction="#onActionFilterWeek" text="Current Week" toggleGroup="$tg2" />
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER_LEFT" layoutX="215.0" layoutY="10.0" prefHeight="200.0" prefWidth="175.0" spacing="10.0">
               <children>
                  <Label text="Reports:" />
                  <Label layoutX="10.0" layoutY="39.0" text="Month / Type / Total" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ComboBox prefWidth="80.0" promptText="Month" />
                        <ComboBox prefWidth="80.0" promptText="Type" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Total:">
                           <HBox.margin>
                              <Insets />
                           </HBox.margin>
                        </Label>
                        <Label fx:id="monthTypeTotalLabel">
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </VBox>
            <VBox alignment="CENTER_LEFT" layoutX="375.0" layoutY="10.0" prefHeight="200.0" prefWidth="150.0" spacing="10.0">
               <children>
                  <Label />
                  <Label layoutX="10.0" layoutY="39.0" text="Total Appointment Hours:" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ComboBox prefWidth="80.0" promptText="Period" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Total:" />
                        <Label fx:id="totalAppointmentHoursLabel" layoutX="10.0" layoutY="10.0">
                           <font>
                              <Font name="System Bold" size="12.0" />
                           </font>
                           <padding>
                              <Insets left="10.0" />
                           </padding>
                        </Label>
                     </children>
                  </HBox>
               </children>
               <padding>
                  <Insets top="15.0" />
               </padding>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="45.0" right="45.0" />
         </padding>
      </HBox>
      <VBox alignment="CENTER" layoutX="780.0" layoutY="265.0" prefHeight="200.0" prefWidth="119.0" spacing="10.0">
         <children>
            <Button fx:id="addApptButton" mnemonicParsing="false" onAction="#onActionAddApptScreen" prefHeight="35.0" prefWidth="85.0" text="Add">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="updateApptButton" mnemonicParsing="false" onAction="#onActionUpdateApptScreen" prefHeight="35.0" prefWidth="85.0" text="Update">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="deleteApptButton" mnemonicParsing="false" onAction="#onActionDeleteAppt" prefHeight="35.0" prefWidth="85.0" text="Delete">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
