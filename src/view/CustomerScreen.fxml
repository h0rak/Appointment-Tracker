<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="625.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CustomerController">
   <children>
      <TableView fx:id="customerTableView" layoutX="45.0" layoutY="90.0" prefHeight="525.0" prefWidth="735.0">
        <columns>
          <TableColumn fx:id="customerIdCol" prefWidth="122.5" text="CustomerID" />
          <TableColumn fx:id="customerNameCol" prefWidth="122.5" text="Name" />
            <TableColumn fx:id="customerAddressCol" prefWidth="122.5" text="Address" />
            <TableColumn fx:id="customerPostalCodeCol" prefWidth="122.5" text="Postal Code" />
            <TableColumn fx:id="customerPhoneCol" prefWidth="122.5" text="Phone Number" />
            <TableColumn fx:id="customerDivisionCol" prefWidth="122.5" text="Division" />
        </columns>
      </TableView>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="900.0" spacing="10.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="5.0">
               <children>
                  <Label text="Choose a screen:" />
                  <RadioButton mnemonicParsing="false" onAction="#onActionAppointmentScreen" text="Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg1" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" onAction="#onActionCustomerScreen" selected="true" text="Customers" toggleGroup="$tg1" />
                  <RadioButton mnemonicParsing="false" onAction="#onActionReportScreen" text="Reports" toggleGroup="$tg1" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="45.0" right="45.0" />
         </padding>
      </HBox>
      <VBox alignment="CENTER" layoutX="780.0" layoutY="265.0" prefHeight="200.0" prefWidth="119.0" spacing="10.0">
         <children>
            <Label text="Customer Actions:">
               <font>
                  <Font size="12.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" onAction="#onActionAddCustomer" prefHeight="35.0" prefWidth="85.0" text="Add">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onActionUpdateCustomer" prefHeight="35.0" prefWidth="85.0" text="Update">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button mnemonicParsing="false" onAction="#onActionDeleteCustomer" prefHeight="35.0" prefWidth="85.0" text="Delete">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
