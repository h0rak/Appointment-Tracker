<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="625.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ReportController">
   <children>
      <HBox alignment="CENTER_LEFT" prefHeight="90.0" prefWidth="900.0" spacing="10.0">
         <children>
            <VBox prefHeight="200.0" prefWidth="150.0" spacing="5.0">
               <children>
                  <Label text="Choose a screen:" />
                  <RadioButton mnemonicParsing="false" onAction="#onActionAppointmentScreen" text="Appointments">
                     <toggleGroup>
                        <ToggleGroup fx:id="tg1" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" onAction="#onActionCustomerScreen" text="Customers" toggleGroup="$tg1" />
                  <RadioButton mnemonicParsing="false" onAction="#onActionReportScreen" selected="true" text="Reports" toggleGroup="$tg1" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets left="45.0" right="45.0" />
         </padding>
      </HBox>
      <HBox layoutY="105.0" prefHeight="250.0" prefWidth="900.0">
         <children>
            <TableView fx:id="contactScheduleTableView" prefHeight="250.0" prefWidth="735.0">
              <columns>
                <TableColumn prefWidth="50.0" text="ApptID" />
                <TableColumn prefWidth="75.0" text="Title" />
                  <TableColumn prefWidth="75.0" text="Description" />
                  <TableColumn prefWidth="75.0" text="Location" />
                  <TableColumn prefWidth="50.0" text="Type" />
                  <TableColumn prefWidth="65.0" text="Date" />
                  <TableColumn prefWidth="50.0" text="Start" />
                  <TableColumn prefWidth="50.0" text="End" />
                  <TableColumn prefWidth="83.3" text="CustomerID" />
                  <TableColumn prefWidth="83.3" text="UserID" />
                  <TableColumn prefWidth="83.3" text="ContactID" />
              </columns>
            </TableView>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="125.0" spacing="10.0">
               <children>
                  <Label layoutX="10.0" layoutY="39.0" text="Choose a Contact:" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="12.0" />
                     </font></Label>
                  <ComboBox onAction="#onActionFilterAppointmentByContact" prefWidth="100.0" promptText="Contact" />
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets left="45.0" />
         </padding>
      </HBox>
      <HBox layoutY="376.0" prefHeight="250.0" prefWidth="900.0">
         <children>
            <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="365.0" spacing="10.0">
               <children>
                  <Label layoutX="10.0" layoutY="120.0" text="Total appointments by Type &amp; Month:" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="15.0" />
                     </VBox.margin>
                  </Label>
                  <ComboBox fx:id="typeComboBox" prefWidth="100.0" promptText="Type" />
                  <ComboBox fx:id="monthComboBox" layoutX="60.0" layoutY="135.0" prefWidth="100.0" promptText="Month" />
                  <HBox alignment="TOP_CENTER" prefHeight="25.0" prefWidth="200.0" spacing="10.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#onActionTypeMonthTotal" text="Total" />
                        <Label text="0 hours total">
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                           <font>
                              <Font name="System Bold" size="13.0" />
                           </font>
                        </Label>
                     </children>
                     <padding>
                        <Insets top="20.0" />
                     </padding>
                  </HBox>
               </children>
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </VBox>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="365.0" spacing="10.0">
               <children>
                  <Label layoutX="10.0" layoutY="120.0" text="Total number of Customers by Country:" textAlignment="CENTER" wrapText="true">
                     <font>
                        <Font size="12.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="45.0" />
         </padding>
      </HBox>
      <Label layoutX="45.0" layoutY="90.0" text="Filter appointments by Contact to view a contact's schedule" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="12.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
