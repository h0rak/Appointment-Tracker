<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.UpdateCustomerController">
   <children>
      <VBox layoutX="125.0" layoutY="100.0" prefHeight="300.0" prefWidth="250.0">
         <children>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="ID:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="customerIdField" alignment="TOP_RIGHT" disable="true" maxWidth="150.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="10.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Name:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="customerNameField" alignment="TOP_RIGHT" maxWidth="150.0" promptText="First Last">
                     <font>
                        <Font name="System Italic" size="13.0" />
                     </font>
                  </TextField>
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="50.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Address:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="customerAddressField" alignment="TOP_RIGHT" maxWidth="150.0" promptText="123 Name St,  City" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="69.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Postal Code:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="customerPostalCodeField" alignment="TOP_RIGHT" maxWidth="150.0" promptText="12345" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="79.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Phone:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <TextField fx:id="customerPhoneNumberField" alignment="TOP_RIGHT" maxWidth="150.0" promptText="555-555-5555" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="84.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Country:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="countryComboBox" maxWidth="150.0" nodeOrientation="LEFT_TO_RIGHT" onAction="#onActionCountryComboBox" prefWidth="150.0" promptText="Country" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="10.0" layoutY="88.0" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label text="Division:">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
                  <ComboBox fx:id="divisionComboBox" maxWidth="150.0" prefWidth="150.0" promptText="First-level Division" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onActionCancel" prefWidth="72.5" text="Cancel" />
                  <Button mnemonicParsing="false" onAction="#onActionSave" prefWidth="72.5" text="Update" />
               </children>
            </HBox>
         </children>
      </VBox>
      <Label layoutX="175.0" layoutY="43.0" text="Update Customer">
         <font>
            <Font size="20.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
